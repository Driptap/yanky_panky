function change(){ 	
	$.ajax({
	  url: "/users/1/new_track"
	}).done(function(url) {
	  $('audio > source').attr("src", url);
	  $('audio').load();
	  });
}

$(document).ready(function(){
	$("#cord").click(function(){
		$(this).toggleClass('yanked');
		change();
    });
});
